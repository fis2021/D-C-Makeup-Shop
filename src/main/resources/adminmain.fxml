<GridPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.loose.fis.sre.controllers.AdminMainController"
            prefHeight="400.0" prefWidth="600.0">
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
    </padding>
    <Text id="title-text" text="D-C-Makeup-Shop Admin Main" GridPane.columnIndex="0" GridPane.columnSpan="2"
          GridPane.rowIndex="0"/>


    <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="7">
        <Button onAction="#handleAddProductAction" text="Add Product"/>
    </HBox>

    <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="5" GridPane.rowIndex="7">
        <Button onAction="#handleUpdateProductsAction" text="View Products"/>
    </HBox>

    <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="10" GridPane.rowIndex="7">
        <Button onAction="#handleViewOrdersAction" text="View Orders"/>
    </HBox>
</GridPane>
